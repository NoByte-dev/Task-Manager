<div class="flex flex-col bg-gray-200 w-full rounded-lg overflow-x-auto">
  <h1 class="text-center text-xl">Tarefas</h1>
    <div class="flex justify-center">
        <table class="text-white mb-7 rounded-t-lg overflow-hidden">
          <thead>
            <tr class="bg-slate-700">
              <th class="p-2">Título</th>
              <th class="p-2">Descrição</th>
              <th class="p-2 text-right"><button class="form-buttons hover:shadow-gray-900 hover:shadow-sm"><%= link_to 'Nova tarefa', new_task_path %></button></th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <tr class="text-center hover:bg-slate-400 bg-slate-500 ">
                <td class="p-2"><%= task.title %></td>
                <td class="p-2"><%= task.description.truncate(8) %></td>
                <td class="flex flex-row w-full justify-center items-center p-2">
                  <button class="table-buttons rounded-l-md"><%= link_to 'Editar', edit_task_path(task) %></button>
                  <button class="table-buttons"><%= link_to 'Apagar', task_path(task), data: {'turbo-method': :delete, 'turbo-confirm': 'Tem certeza ?'}%></button>
                  <button class="table-buttons rounded-r-md"><%= link_to 'Ver', task_path(task) %></button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>
